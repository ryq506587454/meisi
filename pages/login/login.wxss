/* pages/login/login.wxss */
/**index.wxss**/
.loginPage {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
}
.login-loge{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 500rpx;
}
.login-loge image{
  height: 100%;
  width: 100%;
}
.top{
  position: absolute;
  top: 2%;
  left: 10%;
  font-weight: 600;
  font-size: 17px;
}
.icon{
  position: absolute;
  top: 2%;
  left: 3%;
  font-weight: 600;
  font-size: 25px;
}
.login-input{
  width: 100%;
  height: 500rpx;
}
.login-item{
  display: flex;
  flex-direction: column;
  align-items: left;
  margin: 10px 0px;
}
.login-item-title{
  font-size:20px;
  font-weight:600;
  margin-left:30px; 
  color: gray;
}
.login-item-input{ 
  width: 90%;
  height:50rpx;
  margin:10px auto;
}
.login-input input{
  border-bottom: 1px solid gray; 
}
.login-btn{
  display: flex;
  flex-direction:row;
  justify-content: center; 
  width: 80%;
  margin:12px auto;
}
.login-btn button{
  width: 100%;
 
}
.login-btn-right{
   margin-left:10%;
}