/* pages/login/login.wxss */
/**index.wxss**/
.loginPage {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
}
.login-loge{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 500rpx;
}
.login-loge image{
  height: 100%;
  width: 100%;
}
.login-input{
  width: 100%;
  height: 500rpx;
}
.login-item{
  display: flex;
  flex-direction: column;
  align-items: left;
  margin: 10px 0px;
}
.login-item-title{
  font-size:20px;
  font-weight:600;
  margin-left:30px; 
  color: gray;
}
.login-item-input{ 
  width: 90%;
  height:50rpx;
  margin:10px auto;
}
.login-input input{
  border-bottom: 1px solid gray; 
}
.login-btn{
  width: 45%;
  margin:12px auto;
}
.login-btn button{
  padding: 20px auto;
}
.login-weixin{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
 
}
.login-weixin image{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}