/* pages/user/user.wxss */
.userPage{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
}
.userInfo{
  height:300rpx; 
  width: 100%;
  background:linear-gradient(to right top, #6959CD, rgb(36, 198, 219));
  display: flex;
  flex-direction: row;
  justify-content: left center;
}
.userInfo-img{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left:25px; 
  align-items: center;
}
.userInfo-img image{
  width: 170rpx;
  height: 170rpx;
  border-radius: 60%;

}
.userInfo-name{
  color: white;
  display: flex;
  flex-direction: row;
  margin-left:7px; 
  align-items: center;
  font-size:17px; 
  font-family: "微软雅黑";
}
.actioniteams{
  display: flex;
  flex-direction: column;
}
.order{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  border-bottom:1px solid gainsboro; 
}
.order-title{
  margin-left: 12%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 17px;
}
.icon{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size:20px; 
  font-weight: 700;
  margin-left: 48%;
}
