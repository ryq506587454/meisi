/* pages/user/page/myInfo.wxss */
.usInfoPages{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
  background: #E8E8E8;
}
.infoItems{
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: white;
  height: 50%;
  margin-top: 3%;
  
}
.info-item{
  display: flex;
  flex-direction:row; 
  margin:0 3%; 
  height: 20%;
  border-bottom: 1px solid #E8E8E8;
}
.item-left{
  display: flex;
  flex-direction:column; 
  justify-content: center;
  text-align: left;
  height: 100%;
  width: 50%;
}
.item-right{
  display: flex;
  flex-direction:column; 
  justify-content: center;
  text-align: right;
  height: 100%;
  width: 50%;
}
.item-center{
  display: flex;
  flex-direction:column; 
  justify-content: center;
  text-align: center;
  height: 100%;
  width: 100%;
}
