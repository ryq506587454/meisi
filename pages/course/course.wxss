/* pages/course/course.wxss */
@import "../compont/page-title.wxss";
.coursePage{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
}
.top{
  margin-top:1px; 
  width: 100%;
}
.top image{
   width: 100%;
}
.courseIteams{ 
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.course-iteam{
  position: relative;
  width: 100%;
  height: 300rpx;
  background: white;
  margin-top:1px;
  margin-bottom:2px;
}
.course-iteam image{
  margin-left: 1%;
  height: 100%;
  width: 49%;
}
.courseName{
  position: absolute;
  top: 15rpx;
  left: 400rpx;
  font-size:20px; 
}
.courseInfo{
  position: absolute;
  top: 80rpx;
  left: 400rpx;
  font-size:15px; 
  line-height: 60rpx;
}
.courseBtn{
  position: absolute;
  top: 210rpx;
  left: 470rpx;
  background: white;
  border: 1px solid green;
  border-radius:10px;
}
.courseBtn text{
  color: green;
  font-size:15px; 
}
